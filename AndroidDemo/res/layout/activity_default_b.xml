<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabHost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DefaultBActivity" >

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="60px" >

            <TextView
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/wave_chart_desc" >

                <requestFocus />
            </TextView>

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/leftChannel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/rightChannel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="60px" >

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/wide_narrow_desc" >

                <requestFocus />
            </TextView>

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/narrow_wave"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/wide_wave"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="60px" >

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="POWER" >

                <requestFocus />
            </TextView>

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/power_left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />

            <pl.edu.agh.ki.grieg.android.demo.LineChartView
                android:id="@+id/power_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="60px" >

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="SPECTRUM" >

                <requestFocus />
            </TextView>

            <pl.edu.agh.ki.grieg.android.demo.SpectrumView
                android:id="@+id/spectrum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.3" />

        </LinearLayout>
    </FrameLayout>

</TabHost>